<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Regression Mobile Test Suite">
    <!-- parallel= ["methods" | "tests" | "classes" | "instances"] -->
    <test name="Android Regression Test">
        <parameter name="PlatformName" value="Android"/>
        <!-- PlatformName: [Android | iOS] -->
        <classes>
            <class name="tests.android.TestFormPage"/>
            <class name="tests.android.TestAddProductsToCart"/>
        </classes>
    </test>
    <test name="iOS Regression Test">
        <parameter name="PlatformName" value="iOS"/>
        <!-- PlatformName: [Android | iOS] -->
        <classes>
            <class name="tests.ios.TestIOSAlerts"/>
        </classes>
    </test>
</suite>