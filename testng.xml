<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Regression Mobile Test Suite" parallel="classes"> <!-- methods | tests | classes | instances -->
    <test name="Android Regression Test">
        <parameter name="PlatformName" value="Android"/> <!-- Android | iOS-->
        <classes>
            <class name="tests.android.TestFormPage"/>
        </classes>
    </test>
    <test name="iOS Regression Test">
        <parameter name="PlatformName" value="iOS"/> <!-- Android | iOS-->
        <classes>
            <class name="tests.ios.TestIOSAlerts"/>
        </classes>
    </test>
</suite>